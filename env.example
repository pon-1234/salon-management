# Database connection string (prisma migrate も同じ URI を利用します)
DATABASE_URL="postgresql://user:password@localhost:5432/salon_management"
# ※ PgBouncer などの非プール接続を使いたい場合は、任意で DIRECT_URL を追加してください。
# DIRECT_URL="postgresql://user:password@localhost:5432/salon_management"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Cron authentication token for scheduled jobs (e.g., point expiration)
CRON_SECRET="replace-with-random-32-char-token"

# Supabase Storage
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# Optional: Admin creation
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="admin123"

# LINE Messaging API (キャストへのLINE通知を有効化する場合に設定)
LINE_MESSAGING_CHANNEL_ACCESS_TOKEN=""
LINE_MESSAGING_CHANNEL_SECRET=""
LINE_MESSAGING_ENABLED="false"
LINE_MESSAGING_DEFAULT_USER_ID=""

# Vonage SMS (電話番号認証・SMS通知)
VONAGE_API_KEY=""
VONAGE_API_SECRET=""
VONAGE_SMS_FROM="Salon"
